@model SigortaTakipSistemi.Models.CarModels

@{
    ViewData["Title"] = "Model Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Model Ekle</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarBrandName" class="control-label"></label>
                <select asp-for="CarBrandId" class ="form-control" asp-items="ViewBag.CarBrandId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Ekle" class="btn btn-primary" />
                <a class="btn btn-dark" asp-action="Index">Listeye Geri Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
