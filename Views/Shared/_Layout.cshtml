    <script src="~/Content/Site/bower_components/fastclick/lib/fastclick.js"></script>
    <script src="~/Content/Site/dist/js/adminlte.min.js"></script>
    <script src="~/Content/Site/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/Site/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script src="~/Content/Site/dist/js/demo.js"></script>
    <script src="~/Content/Site/bower_components/select2/dist/js/select2.full.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#allTables').DataTable({
                "footerCallback": function (row, data, start, end, display) {
                    var api = this.api(), data;

                    var intVal = function (i) {
                        return typeof i === 'string' ?
                            i.replace(/[\$,₺]/g, '') * 1 :
                            typeof i === 'number' ?
                                i : 0;
                    };

                    totalAmount = api
                        .column(6)
                        .data()
                        .reduce(function (a, b) {
                            return intVal(a) + intVal(b);
                        }, 0).toFixed(2);

                    totalBonus = api
                        .column(7)
                        .data()
                        .reduce(function (a, b) {
                            return intVal(a) + intVal(b);
                        }, 0).toFixed(2);

                    pageTotalAmount = api
                        .column(6, { page: 'current' })
                        .data()
                        .reduce(function (a, b) {
                            return intVal(a) + intVal(b);
                        }, 0).toFixed(2);

                    pageTotalBonus = api
                        .column(7, { page: 'current' })
                        .data()
                        .reduce(function (a, b) {
                            return intVal(a) + intVal(b);
                        }, 0).toFixed(2);

                    $(api.column(6).footer()).html(
                        pageTotalAmount + '₺'
                    );

                    $(api.column(7).footer()).html(
                        pageTotalBonus + '₺'
                    );

                    $('table tfoot tr:last-child th:nth-child(2)').html(
                        totalAmount + '₺'
                    );

                    $('table tfoot tr:last-child th:nth-child(3)').html(
                        totalBonus + '₺'
                    );
                }
            });
        });

        $('#reportTable').DataTable()

        $('.select2').select2()

        $('#datepicker').datepicker({
            autoclose: true,
            format: "yyyy/mm/dd",
        })

        $('#datepicker2').datepicker({
            autoclose: true,
            format: "yyyy/mm/dd",
        })
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
