<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Banaz Sigorta | @ViewData["Title"]</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="stylesheet" href="~/Content/NewSite/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/Content/NewSite/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">
    <link rel="stylesheet" href="~/Content/NewSite/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/NewSite/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="~/Content/NewSite/plugins/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css">
    <link rel="stylesheet" href="~/Content/NewSite/plugins/pace-progress/themes/black/pace-theme-flat-top.css">
    <link rel="stylesheet" href="~/Content/NewSite/plugins/select2/css/select2.min.css">
    <link rel="stylesheet" href="~/Content/NewSite/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css" />
    <link rel="stylesheet" href="~/Content/NewSite/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition sidebar-mini pace-secondary layout-fixed">
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown user-menu">
                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
                        <img src="~/Content/NewSite/dist/img/user.png" class="user-image img-circle elevation-2">
                        <span class="d-none d-md-inline">@this.User?.Claims?.FirstOrDefault()?.Subject?.Name</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        <li class="user-header bg-primary">
                            <br />
                            <img src="~/Content/NewSite/dist/img/user.png" class="img-circle elevation-2">
                            <p>
                                @this.User?.Claims?.FirstOrDefault()?.Subject?.Name
                            </p>
                        </li>
                        <li class="user-footer">
                            <a asp-controller="Audit" asp-action="Index" class="btn btn-default btn-flat">Log Kayıtları</a>
                            <a asp-controller="Account" asp-action="Logout" class="btn btn-danger btn-flat float-right">Çıkış Yap</a>
                        </li>
                    </ul>
                </li>
            </ul>
        </nav>
        <aside class="main-sidebar sidebar-dark-primary elevation-4" style="position:fixed">
            <a asp-controller="Home" asp-action="Index" class="brand-link">
                <img src="~/Content/NewSite/dist/img/boxed-bg.png" class="brand-image img-circle elevation-3" style="opacity: .0">
                <span class="brand-text font-weight-light">Banaz Sigorta</span>
            </a>
            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="true">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="nav-icon fas fa-home"></i>
                                <p>
                                    Ana Sayfa
                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-file-alt"></i>
                                <p>
                                    Poliçeler
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="Customer" asp-action="Index" class="nav-link">
                                        <i class="far fa-circle nav-icon text-danger"></i>
                                        <p>Müşteri Listesi</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Insurance" asp-action="Index" class="nav-link">
                                        <i class="far fa-circle nav-icon text-danger"></i>
                                        <p>Poliçe Listesi</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Insurance" asp-action="PassiveInsurances" class="nav-link">
                                        <i class="far fa-circle nav-icon text-danger"></i>
                                        <p>Pasif Poliçe Listesi</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-cogs"></i>
                                <p>
                                    Sistem Değişkenleri
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="CarBrand" asp-action="Index">
                                        <i class="far fa-circle nav-icon text-warning"></i><p>Marka Listesi</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="CarModel" asp-action="Index">
                                        <i class="far fa-circle nav-icon text-warning"></i><p>Model Listesi</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="InsuranceCompany" asp-action="Index">
                                        <i class="far fa-circle nav-icon text-warning"></i><p>Sigorta Şirketi Listesi</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="InsurancePolicy" asp-action="Index">
                                        <i class="far fa-circle nav-icon text-warning"></i><p>Poliçe Türü Listesi</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-chart-line"></i>
                                <p>
                                    Raporlar
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Report" asp-action="ProfitReport">
                                        <i class="far fa-circle nav-icon text-info"></i><p>Şirket Bazlı Kâr Raporu</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Report" asp-action="ProfitReportWithInsurancePolicyType">
                                        <i class="far fa-circle nav-icon text-info"></i><p>Poliçe Tipi Bazlı Kâr Rap.</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Report" asp-action="AllProfitReport">
                                        <i class="far fa-circle nav-icon text-info"></i><p>Kâr Raporu</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Report" asp-action="GeneralInsuranceReport">
                                        <i class="far fa-circle nav-icon text-info"></i><p>Genel Rapor</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Report" asp-action="InsurancePaymentTypeReport">
                                        <i class="far fa-circle nav-icon text-info"></i><p>Ödeme Şekli Raporu</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-tools"></i>
                                <p>
                                    Yönetici İşlemleri
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Account" asp-action="Index">
                                        <i class="far fa-circle nav-icon text-success"></i><p>Sistem Kullanıcıları</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Role" asp-action="Index">
                                        <i class="far fa-circle nav-icon text-success"></i><p>Sistem Rolleri</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>
        <div class="content-wrapper text-sm">
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0 text-dark"></h1>
                        </div>
                        <div class="col-sm-6">
                        </div>
                    </div>
                </div>
            </div>
            <button type="button" class="btn btn-success swalDefaultSuccess" hidden id="swalDefaultSuccess">
            </button>
            <button type="button" class="btn btn-danger swalDefaultError" hidden id="swalDefaultError">
            </button>
            @RenderBody()
        </div>
        <footer class="main-footer">
            <strong>Tüm Hakları Saklıdır &copy; 2019 - @DateTime.Now.Year</strong> | Banaz Sigorta
            <div class="float-right d-none d-sm-inline-block">
                <b>Versiyon</b> 2.1.0
            </div>
        </footer>
    </div>

    <script src="~/Content/NewSite/plugins/jquery/jquery.min.js"></script>
    <script src="~/Content/NewSite/plugins/jquery-ui/jquery-ui.min.js"></script>
    <script>
        $.widget.bridge('uibutton', $.ui.button)
    </script>
    <script src="~/Content/NewSite/plugins/pace-progress/pace.min.js"></script>
    <script src="~/Content/NewSite/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/NewSite/plugins/jquery-knob/jquery.knob.min.js"></script>
    <script src="~/Content/NewSite/plugins/moment/moment.min.js"></script>
    <script src="~/Content/NewSite/plugins/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
    <script src="~/Content/NewSite/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
    <script src="~/Content/NewSite/dist/js/adminlte.js"></script>
    <script src="~/Content/NewSite/plugins/select2/js/select2.full.min.js"></script>
    <script src="~/Content/NewSite/plugins/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/NewSite/plugins/sweetalert2.9/sweetalert2.9.js"></script>
    <script src="~/Content/NewSite/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#allTables').DataTable({
                "language": {
                    processing: '<i class="fas fa-sync fa-spin fa-3x fa-fw"></i><span class="sr-only">Yükleniyor...</span> ',
                    zeroRecords: "Hiçbir kayıt bulunamadı.",
                    emptyTable: "Kayıt bulunmamaktadır.",
                    search: "Ara:",
                    oPaginate: {
                        "sNext": "Sonraki",
                        "sPrevious": "Önceki"
                    },
                    sLengthMenu: "_MENU_ adet kayıt getir",
                    sInfo: "Toplam _TOTAL_ kayıttan _START_ - _END_ arası gösteriliyor",
                },
                "pageLength": 100
            });
        });

        $('.select2').select2()

        $('#datepicker').datepicker({
            autoclose: true,
            format: "yyyy/mm/dd",
        })

        $('#datepicker2').datepicker({
            autoclose: true,
            format: "yyyy/mm/dd",
        })

        $('.swalDefaultSuccess').click(function () {
            Swal.fire({
                position: 'center',
                icon: 'success',
                title: 'Başarılı!',
                showConfirmButton: false,
                timer: 1500
            })
        });

        $('.swalDefaultError').click(function () {
            Swal.fire({
                position: 'center',
                icon: 'error',
                title: 'Bir Hata Oluştu!',
                showConfirmButton: false,
                timer: 1500
            })
        });

        $("#resultRow").hide();
        $("#exportButton").hide();
    </script>
    <script type='text/javascript'>
        var url = window.location;
        const allLinks = document.querySelectorAll('.nav-item a');
        const currentLink = [...allLinks].filter(e => {
            return e.href == url;
        });

        if (currentLink[0] != null) {
            currentLink[0].classList.add("active");
            if (currentLink[0].closest(".nav-treeview") != null) {
                currentLink[0].closest(".nav-treeview").style.display = "block";
                currentLink[0].closest(".has-treeview").classList.add("active");
                currentLink[0].parentElement.parentElement.parentElement.children[0].classList.add("active");
                currentLink[0].parentElement.parentElement.parentElement.classList.add("menu-open");
            }
        }
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
