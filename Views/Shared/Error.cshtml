@model SigortaTakipSistemi.Models.ViewModels.ErrorViewModel
@{
    ViewData["Title"] = "Hata";
}

<h1 class="text-danger">Bir hata oluştu</h1>

@if (Model.ShowRequestId)
{
    <div class="content-wrapper">
        <section class="content">
            <div class="error-page">
                <h2 class="headline text-red">500</h2>
                <div class="error-content">
                    <h3><i class="fa fa-warning text-red"></i> Tüh! Bir hata oluştu. Hatanın açıklaması şu şekildeymiş:</h3>
                    <p>
                        <h5><b>@Model.RequestMessage</b></h5>
                        Hemen site yöneticisi ile iletişime geçin ki durumu hızlıca çözelim.
                        Bu sırada <a asp-controller="Home" asp-action="Index">ana sayfaya dönüp</a> diğer işlerinize devam edebilirsiniz.
                    </p>

                    <a href="@Context.Request.Headers["Referer"].ToString()" class="btn btn-danger btn-block">Geri Dön</a>

                    @*<form class="search-form">
                        <div class="input-group">
                            <input type="text" name="search" class="form-control" placeholder="Search">
                            <div class="input-group-btn">
                                <button type="submit" name="submit" class="btn btn-danger btn-flat">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>*@
                </div>
            </div>
        </section>
    </div>
}