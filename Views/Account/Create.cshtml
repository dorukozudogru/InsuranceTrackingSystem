@model SigortaTakipSistemi.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Sistem Kullanıcısı Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content">
        <div class="box-header">
            <h2 class="box-title">
                <i class="glyphicon glyphicon-user"></i>&nbsp;Sistem Kullanıcısı Ekle
            </h2>
        </div>
        <div class="row">
            <div class="box">
                <div class="box-body">
                    <div class="col-md-4">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" autocomplete="off" placeholder="E-Posta" value="." />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="control-label"></label>
                                <input asp-for="Password" class="form-control" type="password" autocomplete="off" placeholder="Şifre" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Ekle" class="btn btn-success" />
                                <a class="btn btn-primary pull-right" asp-action="Index" style="margin-right: 5px;">
                                    <i class="fa fa-chevron-left"></i>&nbsp;&nbsp;Listeye Geri Dön
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>