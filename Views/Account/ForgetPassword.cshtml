@model SigortaTakipSistemi.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Şifremi Unuttum";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Banaz Sigorta | Şifremi Unuttum</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <link rel="stylesheet" href="~/Content/NewSite/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/Content/NewSite/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/NewSite/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="#"><b>BANAZ SİGORTA</b><br />Şifremi Unuttum</a>
        </div>
        <div class="card">
            <div class="card-body login-card-body">
                <form asp-controller="Account" asp-action="ForgetPassword">
                    @if (ViewBag.Message != null)
                    {
                        <div class="form-group alert alert-success alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
                            <b>@ViewBag.Message</b>
                        </div>
                    }
                    <label asp-for="Email" class="control-label"></label>
                    <div class="input-group mb-3 has-feedback">
                        <input type="email" asp-for="Email" class="form-control" placeholder="E-Posta" name="email" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary btn-block">Sıfırla</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="~/Content/NewSite/plugins/jquery/jquery.min.js"></script>
    <script src="~/Content/NewSite/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/NewSite/dist/js/adminlte.min.js"></script>
</body>
</html>