@model IEnumerable<SigortaTakipSistemi.Models.ViewModels.GeneralReportViewModel>

@{
    ViewData["Title"] = "Ödeme Şekli Raporu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content">
        <div class="box-header">
            <h2 class="box-title">
                <i class="fa fa-credit-card-alt"></i>&nbsp;Ödeme Şekli Raporu
            </h2>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="box table-responsive">
                    <div class="box-body">
                        <table id="allTables" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.InsurancePaymentType)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Count)
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.InsurancePaymentTypeName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Count)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>